<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>exec:java</goal>
                
                
            </goals>
            <activatedProfiles>
                <activatedProfile>exec-app</activatedProfile>
            </activatedProfiles>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Dagent-config-path=package/conf/agent_example.config -Dbroker-global-config-path=package/conf/broker_global.config -classpath %classpath pt.com.broker.Start</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Dagent-config-path=package/conf/agent_example.config -Dbroker-global-config-path=package/conf/broker_global.config -classpath %classpath pt.com.broker.Start</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
